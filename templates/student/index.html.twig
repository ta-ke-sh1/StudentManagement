{% extends 'base.html.twig' %} {% block title %}Students{% endblock %} {% block
searchBar %}
<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
        <div class="form-group col-md-4 searchBar">
            <form action="#" method="POST">
                <input
                    type="search"
                    class="form-control"
                    name="title"
                    placeholder="Enter student name"
                    required
                />
            </form>
        </div>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a href="#">Profile</a>
            </li>
            <li class="nav-item">
                <a href="#">Log Out</a>
            </li>
        </ul>
    </div>
</nav>
{% endblock %} {% block body %}
<a href="{{ path('student_add') }}"> Add Student</a>
<h2>
    All students
    <div class="options">
        Sort by ID:
        <a name="" id="" class="btn" href="#" role="button"
            ><img
                src="{{ asset('icons/up.jpg') }}"
                width="30px"
                height="auto"
                alt=""
        /></a>
        <a name="" id="" class="btn" href="#" role="button"
            ><img
                src="{{ asset('icons/down.jpg') }}"
                width="30px"
                height="auto"
                alt=""
        /></a>
        <span class="choice">Sort by Name:</span>
        <a name="" id="" class="btn" href="#" role="button"
            ><img
                src="{{ asset('icons/up.jpg') }}"
                width="30px"
                height="auto"
                alt=""
        /></a>
        <a name="" id="" class="btn" href="#" role="button"
            ><img
                src="{{ asset('icons/down.jpg') }}"
                width="30px"
                height="auto"
                alt=""
        /></a>
    </div>
</h2>
<div class="tbl">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Date of Birth</th>
                <th scope="col">Major</th>
                <th scope="col">Image</th>
                <th scope="col">Option</th>
            </tr>
        </thead>
        <tbody>
            {% for student in students %}
            <tr class="entire_row">
                <td>{{ student.id }}</td>
                <td>{{ student.name }}</td>
                <td>{{ student.dob | date('d-m-Y') }}</td>
                <td>{{ student.major }}</td>
                <td>
                    <img
                        src="{{ asset('students/' ~ student.image) }}"
                        alt=""
                        height="150px"
                        width="auto"
                    />
                </td>
                <td>
                    <a
                        name=""
                        id=""
                        class="btn btn-primary"
                        href="#"
                        role="button"
                        >Edit</a
                    >
                    <a
                        name=""
                        id=""
                        class="btn btn-danger"
                        href="#"
                        role="button"
                        >Delete</a
                    >
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
