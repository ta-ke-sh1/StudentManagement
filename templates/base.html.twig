<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle` and uncomment
        the following Encore helpers to start using Symfony UX #} {% block
        stylesheets %}
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
        <link
            rel="stylesheet"
            href="{{ asset('CSS/inputType.css') }}?version=1.2"
        />
        <link
            rel="stylesheet"
            href="{{ asset('CSS/navBar.css') }}?version=1.4"
        />
        <link
            rel="stylesheet"
            href="{{ asset('CSS/table.css') }}?version=1.232"
        />
        <link
            rel="stylesheet"
            href="{{ asset('CSS/headings.css') }}?version=1.1"
        />
        <link
            rel="stylesheet"
            href="{{ asset('CSS/searchBar.css') }}?version=1.2"
        />
        <script src="{{ asset('JS/navBar.js') }}"></script>
        <style>
            .bdy{
                margin-left: 32px;
            }
        </style>
        {#{{
            encore_entry_link_tags("app")
        }}#} {% endblock %} {% block javascripts %} {#{{
            encore_entry_script_tags("app")
        }}#} {% endblock %}
    </head>
    <body>
        {% block sidebar %}
        <!-- Sidebar -->
        <div class="l-navbar" id="nav-bar">
            <nav class="nav">
                <div>
                    <a href="{{ path('homepage') }}" class="nav_logo">
                        <img src="{{ asset('logo/logo_blue.png') }}" alt="" />
                    </a>
                    <div class="nav_list">
                        <a href="{{ path('student_list') }}" class="nav_link">
                            Students
                        </a>
                        <a href="{{ path('classFGW_list') }}" class="nav_link">
                            Class
                        </a>
                        <a href="{{ path('subject_list') }}" class="nav_link">
                            Subject
                        </a>
                    </div>
                </div>
            </nav>
        </div>
        <!-- Sidebar -->
        {% endblock %} {% block searchBar %}{% endblock %}
        <div class="bdy">
            {% block body %} {% endblock %}
        </div>
    </body>
</html>
