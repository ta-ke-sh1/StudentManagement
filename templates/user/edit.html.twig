{% extends 'base.html.twig' %}
{% block title %} Edit
{% endblock %}

{% block body %}
	<style>
		.container-fluid {
			position: absolute;
			left: 0;
			min-height: 800px;
		}

		#right-col {
			max-width: 60%;
		}

		.widget {
			margin-top: 120px;
			margin-right: 4%;
			margin-left: 22%;
			width: 540px;
			z-index: 100;
			border: none;
			background-color: white;
		}

		.subTxt {
			color: grey;
		}
		#submit {
			margin-top: -12px;
			background: rgb(2, 0, 36);
			background-size: 300% 100%;
			color: white;
			transition-duration: 0.6s;
			transition: all 0.4s ease-in-out;
			background-image: linear-gradient(90deg, #2B32B2 0%, #1488CC 100%);
			border: none;
		}
		#submit:hover {
			background-position: 100% 0;
		}

		.rem {
			margin-top: -25px;
		}

		.ckbx {
			padding: 2px;
			height: 30px;
			width: 30px;
			-webkit-border-radius: 50px;
			-moz-border-radius: 50px;
		}
		.round {
			position: relative;
		}

		.round label {
			background-color: #fff;
			border: 1px solid #ccc;
			border-radius: 50%;
			cursor: pointer;
			height: 28px;
			left: 0;
			position: absolute;
			top: 0;
			width: 28px;
		}

		.round label:after {
			border: 2px solid #fff;
			border-top: none;
			border-right: none;
			content: "";
			height: 6px;
			left: 7px;
			opacity: 0;
			position: absolute;
			top: 8px;
			transform: rotate(-45deg);
			width: 12px;
		}

		.round input[type="checkbox"] {
			visibility: hidden;
		}

		.round input[type="checkbox"]:checked + label {
			background-color: #1488CC;
			border-color: #26a0da;
		}

		.round input[type="checkbox"]:checked + label:after {
			opacity: 1;
		}

		h1 {
			margin-left: 8px;
			color: #2B32B2;
			font-family: SF-bold;
			margin-bottom: 16px;
		}

		body {
			background-color: whitesmoke
		}

		p {
			margin-left: 8px;
			margin-bottom: 28px;
		}

		.remember {
			position: absolute;
			margin-left: 36px;
			margin-top: -8px;
		}
	</style>
	<div class="container-fluid col-md-6 text-center ">
		<div class="row">
			<div class="col"></div>
			<div class="col">
				<div class="widget">
					<h1>Register</h1> 
                    {{ form_start(UserForm) }} 
					{{ form_row(UserForm.avatar)}}
					{{ form_row(UserForm.username) }}
					{{ form_row(UserForm.confirmPassword)}}
					<p class="rem">
						<div class="round">
							<input type="checkbox" id="checkbox" name="_remember_me"/>
							<label for="checkbox"></label>
							<span class="remember">Edit password?</span>
						</div>
					</p> 
                    <div id="pwd">
						{{ form_row(UserForm.plainPassword)}}
                    </div>
					<button	button type="submit" class="btn">Register</button> {{ form_end(UserForm) }}
				</div>
			</div>
		</div>
	</div>
	<script>
        function myFunction() {
        var x = document.getElementById("pwd");
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }
        }
    </script>
{% endblock %}
